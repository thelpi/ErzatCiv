<Window x:Class="ErsatzCiv.WindowRegimePick"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        SizeToContent="WidthAndHeight" Closing="Window_Closing"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Pick a regime">
    <DockPanel Margin="5">
        <GroupBox Padding="5" DockPanel.Dock="Top" Header="Select a new regime">
            <ComboBox Name="ComboBoxRegimes" Height="25" VerticalContentAlignment="Center" Width="150" DisplayMemberPath="Name" />
        </GroupBox>
    </DockPanel>
</Window>
